<Alloy>
	<Collection src="userModel"/>
	<Window class="container" id="userList" title="User List" >
		<View>
			<ListView width="100%">
				<HeaderView>
					<View backgroundColor="#ddd" height="30">
						<Label class="status">Online</Label>
						<Label class="userName">User Name</Label>
					</View>
				</HeaderView>
				<ListSection dataCollection="userModel">
					<ListItem  image="/images/{status}.png" height="40" title="{name}"/>
				</ListSection>
			</ListView>
		</View>
	</Window>
</Alloy>
